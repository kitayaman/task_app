<h3>スケジュール編集</h3>


<% if flash.alert %>
  <p class="alert"><%= flash.alert %></p>
<% end %>

<%= render "shared/error", obj: @plan %>

<%= form_for @plan do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル"%></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date ,"開始日"%></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :finish_date ,"終了日"%></th>
      <td><%= f.date_field :finish_date %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day ,"終日"%></th>
      <td><%= f.check_box :all_day ,{}, "○", "" %><p>終日の場合はチェックを入れます</p></td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ"%></th>
      <td><%= f.text_area :memo ,{class: "memo_area"} %></td>
    </tr>
    
  </table>

  <div>
    <ul>
      <li><%= f.submit"編集を完了する",{class: "submit-btn"}%></li>
      <li><%= link_to"スケジュール一覧に戻る", :plans %></li>
    </ul>
  </div>
<% end %>